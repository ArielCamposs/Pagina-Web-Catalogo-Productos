---
import Layout from "../layouts/layout.astro";
import Header from "../components/header.astro";
import ProductCard from "../components/productCard.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";
import Footer from "../components/footer.astro";
import SimpleCart from "../components/SimpleCart.astro";

const categories = [
  {
    name: "Artículos de Aseo",
    image: "/images/confort40.png",
    href: "/productos?categoria=Aseo",
    description: "Productos de limpieza profesional para tu negocio",
  },
  {
    name: "Productos Plásticos",
    image: "/images/potekraft.webp",
    href: "/productos?categoria=Plásticos",
    description: "Vasos, contenedores y envases de calidad",
  },
  {
    name: "Papel y Toallas",
    image: "/images/toallatork.png",
    href: "/productos?categoria=Papel",
    description: "Papel higiénico y toallas de mano",
  },
  {
    name: "Desechables",
    image: "/images/confort40.png",
    href: "/productos?categoria=Desechables",
    description: "Productos biodegradables y kraft",
  },
];

const featuredProducts = [
  {
    name: "Vasos Plásticos Transparentes",
    category: "Plásticos",
    image: "/images/confort40.png",
    description: "Pack x100 unidades - Ideales para eventos",
  },
  {
    name: "Bowl Kraft Biodegradable",
    category: "Desechables",
    image: "/images/toallatork.png",
    description: "Ecológicos - Perfectos para delivery",
  },
  {
    name: "Bolsas Camiseta Resistentes",
    category: "Plásticos",
    image: "/images/potekraft.webp",
    description: "Blancas y negras - Alta resistencia",
  },
  {
    name: "Papel Higiénico Premium",
    category: "Aseo",
    image: "/images/confort40.png",
    description: "Rollo de 500 hojas - Doble hoja",
  },
];
---

<Layout
  title="Inicio - Musaplast"
  description="Musaplast - Tu proveedor mayorista de productos plásticos, artículos de aseo y desechables en La Ligua"
>
  <Header />

  <!-- Hero Section Rediseñado -->
  <section class="hero-section">
    <div class="hero-background">
      <img src="/images/hero1.jpg" alt="Musaplast" class="hero-bg-image" />
      <div class="hero-overlay"></div>
    </div>

    <div class="hero-content">
      <div class="container mx-auto px-6">
        <div class="hero-text">
          <div class="hero-badge">
            <span class="badge-dot"></span>
            <span>Proveedor Mayorista</span>
          </div>

          <h1 class="hero-title">MUSAPLAST</h1>

          <p class="hero-subtitle">Tu Proveedor de Confianza en La Ligua</p>

          <p class="hero-description">
            Productos plásticos, artículos de aseo y desechables al por mayor
            para tu negocio
          </p>

          <div class="hero-ctas">
            <a href="/productos" class="btn-primary-large">
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
              </svg>
              Ver Catálogo Completo
            </a>
            <a href="/contacto" class="btn-secondary-large">
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              Cotizar Ahora
            </a>
          </div>

          <div class="hero-stats">
            <div class="stat-item">
              <svg
                class="stat-icon"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
              <span class="stat-number">500+</span>
              <span class="stat-label">Clientes</span>
            </div>
            <div class="stat-item">
              <svg
                class="stat-icon"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="stat-number">15+</span>
              <span class="stat-label">Años</span>
            </div>
            <div class="stat-item">
              <svg
                class="stat-icon"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
                ></path>
              </svg>
              <span class="stat-number">24/7</span>
              <span class="stat-label">Atención</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sección de Valor (USPs) -->
  <section class="usp-section">
    <div class="container mx-auto px-6">
      <div class="usp-grid">
        <div class="usp-card">
          <div class="usp-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="usp-title">Calidad Premium</h3>
          <p class="usp-description">
            Productos de primeras marcas con garantía de calidad
          </p>
        </div>

        <div class="usp-card">
          <div class="usp-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="usp-title">Entrega Rápida</h3>
          <p class="usp-description">
            Despacho en 24-48 horas a toda la región
          </p>
        </div>

        <div class="usp-card">
          <div class="usp-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <h3 class="usp-title">Precios Mayorista</h3>
          <p class="usp-description">
            Descuentos especiales por volumen de compra
          </p>
        </div>

        <div class="usp-card">
          <div class="usp-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
              ></path>
            </svg>
          </div>
          <h3 class="usp-title">Atención 24/7</h3>
          <p class="usp-description">
            Asesoría personalizada cuando la necesites
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Categorías Grandes -->
  <section class="categories-section">
    <div class="container mx-auto px-6">
      <div class="section-header">
        <h2 class="section-title">Explora Nuestras Categorías</h2>
        <p class="section-subtitle">
          Encuentra exactamente lo que tu negocio necesita
        </p>
      </div>

      <div class="categories-grid">
        {
          categories.map((category) => (
            <a href={category.href} class="category-card-large">
              <div class="category-image-container">
                <img
                  src={category.image}
                  alt={category.name}
                  class="category-image"
                />
                <div class="category-overlay" />
              </div>
              <div class="category-content">
                <h3 class="category-name">{category.name}</h3>
                <p class="category-description">{category.description}</p>
                <span class="category-link">
                  Ver productos
                  <svg
                    class="w-5 h-5 ml-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17 8l4 4m0 0l-4 4m4-4H3"
                    />
                  </svg>
                </span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Productos Destacados -->
  <section class="products-section">
    <div class="container mx-auto px-6">
      <div class="section-header">
        <h2 class="section-title">Productos Destacados</h2>
        <p class="section-subtitle">
          Nuestra selección premium para tu negocio
        </p>
      </div>

      <div class="products-grid">
        {featuredProducts.map((product) => <ProductCard {...product} />)}
      </div>

      <div class="products-view-all">
        <a href="/productos" class="btn-view-all">
          Ver Todo el Catálogo
          <svg
            class="w-5 h-5 ml-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Final -->
  <section class="cta-final-section">
    <div class="container mx-auto px-6">
      <div class="cta-final-card">
        <div class="cta-final-content">
          <h2 class="cta-final-title">¿Listo para hacer tu pedido?</h2>
          <p class="cta-final-text">
            Contáctanos por WhatsApp y te responderemos de inmediato con precios
            y disponibilidad
          </p>
          <a
            href="https://wa.me/56912345678"
            target="_blank"
            class="btn-whatsapp-large"
          >
            <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
              ></path>
            </svg>
            Contactar por WhatsApp
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
  <WhatsAppButton />
  <SimpleCart />
</Layout>

<style>
  /* Hero Section */
  .hero-section {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(15, 23, 42, 0.95) 0%,
      rgba(8, 145, 178, 0.85) 100%
    );
  }

  .hero-content {
    position: relative;
    z-index: 1;
    width: 100%;
    padding: 4rem 0;
  }

  .hero-text {
    max-width: 800px;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 0.75rem 1.5rem;
    border-radius: 9999px;
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
    margin-bottom: 2rem;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: #06b6d4;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  .hero-title {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 900;
    color: white;
    line-height: 1.1;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 700;
    background: linear-gradient(135deg, #06b6d4 0%, #22d3ee 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1.5rem;
  }

  .hero-description {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2.5rem;
    line-height: 1.6;
  }

  .hero-ctas {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .btn-primary-large {
    display: inline-flex;
    align-items: center;
    padding: 1.25rem 2.5rem;
    background: linear-gradient(135deg, #0891b2 0%, #0284c7 100%);
    color: white;
    font-weight: 700;
    font-size: 1.125rem;
    border-radius: 0.75rem;
    transition: all 0.3s ease;
    box-shadow: 0 10px 30px rgba(8, 145, 178, 0.4);
  }

  .btn-primary-large:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(8, 145, 178, 0.6);
  }

  .btn-secondary-large {
    display: inline-flex;
    align-items: center;
    padding: 1.25rem 2.5rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(12px);
    border: 2px solid rgba(255, 255, 255, 0.3);
    color: white;
    font-weight: 700;
    font-size: 1.125rem;
    border-radius: 0.75rem;
    transition: all 0.3s ease;
  }

  .btn-secondary-large:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-3px);
  }

  .hero-stats {
    display: flex;
    gap: 3rem;
    flex-wrap: wrap;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .stat-icon {
    width: 2.5rem;
    height: 2.5rem;
    color: #06b6d4;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 900;
    color: white;
  }

  .stat-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 500;
  }

  /* USP Section */
  .usp-section {
    padding: 5rem 0;
    background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
  }

  .usp-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .usp-card {
    text-align: center;
    padding: 2rem;
    background: white;
    border-radius: 1.5rem;
    border: 2px solid #e2e8f0;
    transition: all 0.3s ease;
  }

  .usp-card:hover {
    border-color: #0891b2;
    box-shadow: 0 10px 30px rgba(8, 145, 178, 0.1);
    transform: translateY(-5px);
  }

  .usp-icon {
    width: 4rem;
    height: 4rem;
    margin: 0 auto 1.5rem;
    padding: 1rem;
    background: linear-gradient(135deg, #ecfeff 0%, #cffafe 100%);
    border-radius: 1rem;
    color: #0891b2;
  }

  .usp-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.75rem;
  }

  .usp-description {
    color: #64748b;
    line-height: 1.6;
  }

  /* Categories Section */
  .categories-section {
    padding: 5rem 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    background: linear-gradient(135deg, #0891b2 0%, #0284c7 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: #64748b;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .category-card-large {
    position: relative;
    height: 400px;
    border-radius: 1.5rem;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    transition: all 0.5s ease;
  }

  .category-card-large:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 60px rgba(8, 145, 178, 0.2);
  }

  .category-image-container {
    position: absolute;
    inset: 0;
  }

  .category-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .category-card-large:hover .category-image {
    transform: scale(1.1);
  }

  .category-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(8, 145, 178, 0.9) 100%
    );
    transition: all 0.5s ease;
  }

  .category-card-large:hover .category-overlay {
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.5) 0%,
      rgba(6, 182, 212, 0.95) 100%
    );
  }

  .category-content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 2rem;
    color: white;
    z-index: 1;
  }

  .category-name {
    font-size: 2rem;
    font-weight: 900;
    margin-bottom: 0.75rem;
    transition: transform 0.3s ease;
  }

  .category-card-large:hover .category-name {
    transform: translateY(-8px);
  }

  .category-description {
    font-size: 1rem;
    margin-bottom: 1.5rem;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.3s ease;
  }

  .category-card-large:hover .category-description {
    opacity: 1;
    transform: translateY(0);
  }

  .category-link {
    display: inline-flex;
    align-items: center;
    font-weight: 700;
    opacity: 0;
    transform: translateX(-20px);
    transition: all 0.3s ease 0.1s;
  }

  .category-card-large:hover .category-link {
    opacity: 1;
    transform: translateX(0);
  }

  /* Products Section */
  .products-section {
    padding: 5rem 0;
    background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  .products-view-all {
    text-align: center;
    margin-top: 3rem;
  }

  .btn-view-all {
    display: inline-flex;
    align-items: center;
    padding: 1rem 2.5rem;
    background: linear-gradient(135deg, #0891b2 0%, #0284c7 100%);
    color: white;
    font-weight: 700;
    font-size: 1.125rem;
    border-radius: 0.75rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(8, 145, 178, 0.3);
  }

  .btn-view-all:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(8, 145, 178, 0.4);
  }

  /* CTA Final */
  .cta-final-section {
    padding: 5rem 0;
  }

  .cta-final-card {
    background: linear-gradient(135deg, #0891b2 0%, #0284c7 50%, #0369a1 100%);
    border-radius: 2rem;
    padding: 4rem 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(8, 145, 178, 0.4);
  }

  .cta-final-card::before {

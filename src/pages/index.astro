---
import Layout from '../layouts/layout.astro';
import Header from '../components/header.astro';
import HeroCarousel from '../components/HeroCarousel.astro';
import ProductCard from '../components/productCard.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import CartButton from '../components/CartButton.astro';
import Footer from '../components/footer.astro';

const featuredProducts = [
  {
    name: "Vasos Plásticos Transparentes",
    category: "Plásticos",
    image: "/images/confort40.png",
    description: "Pack x100 unidades"
  },
  {
    name: "Bowl Kraft",
    category: "Desechables",
    image: "/images/toallatork.png",
    description: "Ideales para delivery"
  },
  {
    name: "Bolsas Camiseta",
    category: "Plásticos",
    image: "/images/potekraft.webp",
    description: "Blancas y negras"
  },
  {
    name: "Papel Higiénico",
    category: "Aseo",
    image: "/images/confort40.png",
    description: "Rollo de 500 hojas"
  }
];
---

<Layout title="Inicio" description="Musaplast - Tu proveedor de productos plásticos, artículos de aseo y más">
  <Header />
  <HeroCarousel />
  
  <main class="relative overflow-hidden">
    <!-- Efectos de fondo -->
    <div class="absolute top-0 left-0 w-full h-full opacity-5 pointer-events-none">
      <div class="absolute top-20 left-10 w-96 h-96 bg-blue-500 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-slate-500 rounded-full blur-3xl"></div>
    </div>

    <!-- Productos Destacados -->
    <section class="container mx-auto px-4 py-24 relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-5xl md:text-6xl font-black mb-6 bg-gradient-to-r from-blue-600 via-slate-700 to-blue-800 bg-clip-text text-transparent">
          Productos Destacados
        </h2>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          Descubre nuestra selección premium de productos para tu negocio
        </p>
      </div>
      
      <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 sm:gap-6 md:gap-8">
        {featuredProducts.map(product => (
          <ProductCard {...product} />
        ))}
      </div>
    </section>

    <!-- CTA Section -->
    <section class="container mx-auto px-4 py-16 relative z-10">
      <div class="cta-card">
        <div class="cta-content">
          <h2 class="text-4xl md:text-5xl font-black mb-4 text-white">
            ¿Necesitas cotizar por mayor?
          </h2>
          <p class="text-gray-200 mb-8 text-lg">
            Contáctanos por WhatsApp y te responderemos de inmediato
          </p>
          <a 
            href="https://wa.me/56912345678" 
            target="_blank"
            class="cta-button-large"
          >
            <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Contactar Ahora
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <WhatsAppButton />
  <CartButton />
</Layout>

<style>
  .cta-card {
    background: linear-gradient(135deg, #1e40af 0%, #1e3a8a 50%, #0f172a 100%);
    border-radius: 2rem;
    padding: 4rem 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(30, 64, 175, 0.4);
  }
  
  .cta-card::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transform: rotate(45deg);
    animation: shine 3s infinite;
  }
  
  .cta-content {
    position: relative;
    z-index: 1;
  }
  
  .cta-button-large {
    display: inline-flex;
    align-items: center;
    background: white;
    color: #1e40af;
    font-weight: 700;
    font-size: 1.125rem;
    padding: 1rem 3rem;
    border-radius: 9999px;
    transition: all 0.3s ease;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }
  
  .cta-button-large:hover {
    transform: translateY(-5px) scale(1.05);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
  }
  
  @keyframes shine {
    0% {
      left: -50%;
    }
    100% {
      left: 150%;
    }
  }
</style>

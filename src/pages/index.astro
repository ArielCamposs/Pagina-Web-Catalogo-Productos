---
import Layout from '../layouts/layout.astro';
import Header from '../components/header.astro';
import HeroCarousel from '../components/HeroCarousel.astro';
import ProductCard from '../components/productCard.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import CartButton from '../components/CartButton.astro';
import Footer from '../components/footer.astro';

const categories = [
  {
    name: "Artículos de Aseo",
    image: "/images/confort40.png",
    href: "/categorias/aseo",
    description: "Productos de limpieza profesional"
  },
  {
    name: "Productos Plásticos",
    image: "/images/potekraft.webp",
    href: "/categorias/plasticos",
    description: "Vasos, contenedores y más"
  },
  {
    name: "Papel y Toallas",
    image: "/images/toallatork.png",
    href: "/categorias/papel",
    description: "Papel higiénico y toallas"
  },
  {
    name: "Desechables",
    image: "/images/confort40.png",
    href: "/categorias/desechables",
    description: "Biodegradables y kraft"
  }
];

const featuredProducts = [
  {
    name: "Vasos Plásticos Transparentes",
    category: "Plásticos",
    image: "/images/confort40.png",
    description: "Pack x100 unidades"
  },
  {
    name: "Bowl Kraft",
    category: "Desechables",
    image: "/images/toallatork.png",
    description: "Ideales para delivery"
  },
  {
    name: "Bolsas Camiseta",
    category: "Plásticos",
    image: "/images/potekraft.webp",
    description: "Blancas y negras"
  },
  {
    name: "Papel Higiénico",
    category: "Aseo",
    image: "/images/confort40.png",
    description: "Rollo de 500 hojas"
  }
];
---

<Layout title="Inicio" description="Musaplast - Tu proveedor de productos plásticos, artículos de aseo y más">
  <Header />
  <HeroCarousel />
  
  <main class="relative overflow-hidden">
    <!-- Efectos de fondo -->
    <div class="absolute top-0 left-0 w-full h-full opacity-5 pointer-events-none">
      <div class="absolute top-20 left-10 w-96 h-96 bg-blue-500 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-slate-500 rounded-full blur-3xl"></div>
    </div>

    <!-- Sección de Categorías -->
    <section class="container mx-auto px-4 py-20 relative z-10">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-black mb-4 bg-gradient-to-r from-blue-600 via-slate-700 to-blue-800 bg-clip-text text-transparent">
          Explora por Categorías
        </h2>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          Encuentra exactamente lo que necesitas
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {categories.map((category) => (
          <a 
            href={category.href}
            class="category-card group relative overflow-hidden rounded-2xl h-64 bg-white border-2 border-gray-100 hover:border-blue-400 transition-all duration-500 shadow-sm hover:shadow-md"
          >
            <!-- Contenedor de imagen con padding -->
            <div class="absolute inset-0 flex items-center justify-center p-8">
              <img 
                src={category.image} 
                alt={category.name}
                class="w-full h-full object-contain transition-transform duration-700 group-hover:scale-110"
              />
            </div>

            <!-- Overlay con gradiente -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent group-hover:from-blue-900/95 group-hover:via-blue-800/70 transition-all duration-500"></div>

            <!-- Contenido -->
            <div class="absolute inset-0 flex flex-col justify-end p-6">
              <h3 class="text-2xl md:text-3xl font-bold text-white mb-2 transform transition-transform duration-500 group-hover:translate-y-[-8px]">
                {category.name}
              </h3>
              <p class="text-gray-200 text-sm opacity-0 transform translate-y-4 transition-all duration-500 group-hover:opacity-100 group-hover:translate-y-0">
                {category.description}
              </p>
              
              <!-- Icono de flecha -->
              <div class="mt-3 inline-flex items-center text-white opacity-0 transform translate-x-[-10px] transition-all duration-500 group-hover:opacity-100 group-hover:translate-x-0">
                <span class="text-sm font-semibold mr-2">Ver productos</span>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </section>


 <!-- Sección Conócenos -->
    <section class="relative py-20 bg-gradient-to-br from-slate-50 to-blue-50">
      <div class="container mx-auto px-4 relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          
          <!-- Lado izquierdo: Contenido -->
          <div class="space-y-6">
            <div class="inline-block">
              <span class="bg-blue-100 text-blue-600 font-bold px-4 py-2 rounded-full text-sm">
                Sobre Nosotros
              </span>
            </div>
            
            <h2 class="text-4xl md:text-5xl font-black text-gray-900 leading-tight">
              Tu proveedor de confianza en
              <span class="bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent"> La Ligua</span>
            </h2>
            
            <p class="text-gray-600 text-lg leading-relaxed">
              En <strong class="text-blue-600">Musaplast</strong>, somos especialistas en la distribución de productos plásticos, 
              artículos de aseo y desechables para empresas y negocios de toda la región.
            </p>
            
            <p class="text-gray-600 text-lg leading-relaxed">
              Con años de experiencia en el mercado, nos hemos consolidado como el aliado estratégico 
              de restaurantes, hoteles, supermercados y empresas que buscan calidad y precios competitivos.
            </p>

            <!-- Características -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 pt-6">
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                </div>
                <div>
                  <h3 class="font-bold text-gray-900 mb-1">Calidad Garantizada</h3>
                  <p class="text-gray-600 text-sm">Productos de primeras marcas</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                </div>
                <div>
                  <h3 class="font-bold text-gray-900 mb-1">Entrega Rápida</h3>
                  <p class="text-gray-600 text-sm">Despacho en 24-48 horas</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                </div>
                <div>
                  <h3 class="font-bold text-gray-900 mb-1">Precios al Mayor</h3>
                  <p class="text-gray-600 text-sm">Descuentos por volumen</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
                    </svg>
                  </div>
                </div>
                <div>
                  <h3 class="font-bold text-gray-900 mb-1">Asesoría Personalizada</h3>
                  <p class="text-gray-600 text-sm">Expertos a tu disposición</p>
                </div>
              </div>
            </div>

            <!-- Botón CTA -->
            <div class="pt-4">
              <a 
                href="/contacto" 
                class="inline-flex items-center bg-gradient-to-r from-blue-600 to-blue-700 text-white font-bold px-8 py-4 rounded-xl hover:from-blue-700 hover:to-blue-800 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105"
              >
                Contáctanos
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            </div>
          </div>

          <!-- Lado derecho: Estadísticas/Imagen -->
          <div class="relative">
            <!-- Tarjetas de estadísticas -->
            <div class="grid grid-cols-2 gap-6">
              <div class="stat-card bg-white rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105">
                <div class="text-5xl font-black bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent mb-2">
                  +500
                </div>
                <p class="text-gray-600 font-semibold">Clientes Satisfechos</p>
              </div>

              <div class="stat-card bg-white rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105 mt-8">
                <div class="text-5xl font-black bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent mb-2">
                  +100
                </div>
                <p class="text-gray-600 font-semibold">Productos en Stock</p>
              </div>

              <div class="stat-card bg-white rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105">
                <div class="text-5xl font-black bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent mb-2">
                  15+
                </div>
                <p class="text-gray-600 font-semibold">Años de Experiencia</p>
              </div>

              <div class="stat-card bg-white rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105 mt-8">
                <div class="text-5xl font-black bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent mb-2">
                  24/7
                </div>
                <p class="text-gray-600 font-semibold">Atención al Cliente</p>
              </div>
            </div>

            <!-- Elemento decorativo -->
            <div class="absolute -top-10 -right-10 w-40 h-40 bg-blue-200 rounded-full opacity-20 blur-3xl"></div>
            <div class="absolute -bottom-10 -left-10 w-40 h-40 bg-slate-200 rounded-full opacity-20 blur-3xl"></div>
          </div>
        </div>
      </div>
    </section>



    <!-- Productos Destacados -->
    <section class="container mx-auto px-4 py-24 relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-5xl md:text-6xl font-black mb-6 bg-gradient-to-r from-blue-600 via-slate-700 to-blue-800 bg-clip-text text-transparent">
          Productos Destacados
        </h2>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          Descubre nuestra selección premium de productos para tu negocio
        </p>
      </div>
      
      <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 sm:gap-6 md:gap-8">
        {featuredProducts.map(product => (
          <ProductCard {...product} />
        ))}
      </div>
    </section>

   <!-- CTA Section -->
    <section class="container mx-auto px-4 py-16 relative z-10">
      <div class="cta-card">
        <div class="cta-content">
          <h2 class="text-4xl md:text-5xl font-black mb-4 text-white">
            ¿Necesitas cotizar por mayor?
          </h2>
          <p class="text-gray-200 mb-8 text-lg">
            Contáctanos por WhatsApp y te responderemos de inmediato
          </p>
          <a 
            href="https://wa.me/56912345678" 
            target="_blank"
            class="cta-button-whatsapp"
          >
            <svg class="w-7 h-7 mr-3" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Contactar por WhatsApp
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <WhatsAppButton />
  <CartButton />
</Layout>

<style>
  .category-card {
    position: relative;
    cursor: pointer;
  }

  .category-card::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 1rem;
    padding: 2px;
    background: linear-gradient(135deg, transparent, transparent);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .category-card:hover::before {
    background: linear-gradient(135deg, #3b82f6, #60a5fa);
    opacity: 1;
  }

  .category-card {
    position: relative;
    cursor: pointer;
  }

  .category-card::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 1rem;
    padding: 2px;
    background: linear-gradient(135deg, transparent, transparent);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .category-card:hover::before {
    background: linear-gradient(135deg, #3b82f6, #60a5fa);
    opacity: 1;
  }

  .cta-card {
    background: linear-gradient(135deg, #1e40af 0%, #1e3a8a 50%, #0f172a 100%);
    border-radius: 2rem;
    padding: 4rem 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(30, 64, 175, 0.4);
  }
  
  .cta-card::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transform: rotate(45deg);
    animation: shine 3s infinite;
  }
  
  .cta-content {
    position: relative;
    z-index: 1;
  }
  
  .cta-button-whatsapp {
    display: inline-flex;
    align-items: center;
    background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
    color: white;
    font-weight: 700;
    font-size: 1.125rem;
    padding: 1rem 3rem;
    border-radius: 9999px;
    transition: all 0.3s ease;
    box-shadow: 0 10px 30px rgba(37, 211, 102, 0.4);
  }
  
  .cta-button-whatsapp:hover {
    transform: translateY(-5px) scale(1.05);
    box-shadow: 0 15px 40px rgba(37, 211, 102, 0.6);
  }
  
  @keyframes shine {
    0% {
      left: -50%;
    }
    100% {
      left: 150%;
    }
  }
</style>

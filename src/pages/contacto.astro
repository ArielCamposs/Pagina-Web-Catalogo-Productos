---
import Layout from '../layouts/layout.astro';
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import CartButton from '../components/CartButton.astro';
---

<Layout title="Contacto - Musaplast" description="Ponte en contacto con Musaplast. Estamos aquí para ayudarte">
  <Header />
  
  <main class="min-h-screen bg-gradient-to-b from-slate-50 to-white">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-20">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-black mb-6">
          Contáctanos
        </h1>
        <p class="text-lg md:text-xl text-blue-100 max-w-2xl mx-auto leading-relaxed">
          Estamos listos para atender tus consultas y cotizaciones
        </p>
      </div>
    </section>

    <!-- Main Content -->
    <section class="container mx-auto px-4 py-16">
      <div class="max-w-7xl mx-auto">
        
        <!-- Tarjetas de contacto rápido -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
          <!-- Teléfono -->
          <a 
            href="tel:+56912345678"
            class="bg-white rounded-2xl p-8 shadow-md hover:shadow-xl transition-all duration-300 hover:scale-105 text-center group"
          >
            <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center mx-auto mb-5 group-hover:bg-blue-600 transition-colors">
              <svg class="w-8 h-8 text-blue-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <h3 class="font-bold text-gray-900 mb-2 text-lg">Llámanos</h3>
            <p class="text-blue-600 font-semibold">+56 9 1234 5678</p>
          </a>

          <!-- Email -->
          <a 
            href="mailto:contacto@musaplast.cl"
            class="bg-white rounded-2xl p-8 shadow-md hover:shadow-xl transition-all duration-300 hover:scale-105 text-center group"
          >
            <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center mx-auto mb-5 group-hover:bg-blue-600 transition-colors">
              <svg class="w-8 h-8 text-blue-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="font-bold text-gray-900 mb-2 text-lg">Email</h3>
            <p class="text-blue-600 font-semibold">contacto@musaplast.cl</p>
          </a>

          <!-- WhatsApp -->
          <a 
            href="https://wa.me/56912345678?text=Hola%2C%20quisiera%20información"
            target="_blank"
            class="bg-white rounded-2xl p-8 shadow-md hover:shadow-xl transition-all duration-300 hover:scale-105 text-center group"
          >
            <div class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mx-auto mb-5 group-hover:bg-green-600 transition-colors">
              <svg class="w-8 h-8 text-green-600 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
            </div>
            <h3 class="font-bold text-gray-900 mb-2 text-lg">WhatsApp</h3>
            <p class="text-green-600 font-semibold">Chatea ahora</p>
          </a>

          <!-- Horarios -->
          <div class="bg-gradient-to-br from-blue-600 to-blue-800 rounded-2xl p-8 shadow-md text-white text-center">
            <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center mx-auto mb-5">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="font-bold mb-3 text-lg">Horario</h3>
            <div class="space-y-2">
              <p class="text-blue-100">Lun-Vie: 9:00-18:00</p>
              <p class="text-blue-100">Sáb: 9:00-14:00</p>
            </div>
          </div>
        </div>

        <!-- Formulario y Mapa lado a lado -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
          
          <!-- Formulario de Contacto -->
          <div class="bg-white rounded-3xl p-10 shadow-lg">
            <div class="mb-8">
              <h2 class="text-3xl font-bold text-gray-900 mb-3">Envíanos un Mensaje</h2>
              <p class="text-gray-600">Completa el formulario y te responderemos pronto</p>
            </div>
            
            <form id="contact-form" class="space-y-6">
              <!-- Nombre -->
              <div>
                <label for="name" class="block text-sm font-semibold text-gray-700 mb-3">
                  Nombre Completo *
                </label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  class="w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:border-blue-500 focus:outline-none transition-colors text-gray-900"
                  placeholder="Juan Pérez"
                />
              </div>

              <!-- Email -->
              <div>
                <label for="email" class="block text-sm font-semibold text-gray-700 mb-3">
                  Email *
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:border-blue-500 focus:outline-none transition-colors text-gray-900"
                  placeholder="tu@email.com"
                />
              </div>

              <!-- Teléfono -->
              <div>
                <label for="phone" class="block text-sm font-semibold text-gray-700 mb-3">
                  Teléfono
                </label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone"
                  class="w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:border-blue-500 focus:outline-none transition-colors text-gray-900"
                  placeholder="+56 9 1234 5678"
                />
              </div>

              <!-- Asunto -->
              <div>
                <label for="subject" class="block text-sm font-semibold text-gray-700 mb-3">
                  Asunto *
                </label>
                <select 
                  id="subject" 
                  name="subject" 
                  required
                  class="w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:border-blue-500 focus:outline-none transition-colors text-gray-900"
                >
                  <option value="">Selecciona un asunto</option>
                  <option value="cotizacion">Solicitar Cotización</option>
                  <option value="consulta">Consulta General</option>
                  <option value="reclamo">Reclamo</option>
                  <option value="otro">Otro</option>
                </select>
              </div>

              <!-- Mensaje -->
              <div>
                <label for="message" class="block text-sm font-semibold text-gray-700 mb-3">
                  Mensaje *
                </label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="5" 
                  required
                  class="w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:border-blue-500 focus:outline-none transition-colors resize-none text-gray-900"
                  placeholder="Escribe tu mensaje aquí..."
                ></textarea>
              </div>

              <!-- Botón Enviar -->
              <button 
                type="submit"
                class="w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white font-bold py-4 px-6 rounded-xl hover:from-blue-700 hover:to-blue-800 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-[1.02] flex items-center justify-center"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                </svg>
                Enviar Mensaje
              </button>
            </form>

            <!-- Mensaje de éxito -->
            <div id="success-message" class="hidden mt-6 p-5 bg-green-50 border-2 border-green-200 rounded-xl">
              <div class="flex items-center">
                <svg class="w-6 h-6 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <p class="text-green-800 font-semibold">¡Mensaje enviado con éxito!</p>
              </div>
            </div>
          </div>

          <!-- Mapa y Dirección -->
          <div class="space-y-8">
            <!-- Dirección -->
            <div class="bg-white rounded-3xl p-10 shadow-lg">
              <h2 class="text-3xl font-bold text-gray-900 mb-6">Nuestra Ubicación</h2>
              <div class="flex items-start space-x-5">
                <div class="flex-shrink-0">
                  <div class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center">
                    <svg class="w-7 h-7 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </div>
                </div>
                <div>
                  <h3 class="font-bold text-gray-900 mb-3 text-lg">Dirección</h3>
                  <p class="text-gray-600 leading-relaxed mb-5">
                    Calle Principal #123<br />
                    La Ligua, Valparaíso<br />
                    Chile
                  </p>
                  <a 
                    href="https://maps.app.goo.gl/NRs2KFmBCfPsS5dS8" 
                    target="_blank"
                    class="inline-flex items-center text-blue-600 hover:text-blue-700 font-semibold transition-colors"
                  >
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                    </svg>
                    Cómo llegar
                  </a>
                </div>
              </div>
            </div>

            <!-- Mapa -->
            <div class="bg-white rounded-3xl shadow-lg overflow-hidden" style="height: 400px;">
<iframe src="https://www.google.com/maps/embed?pb=!4v1763228667283!6m8!1m7!1sQGB6HQuiCbn1_qXfKnlyoA!2m2!1d-32.44771213340503!2d-71.23104061176238!3f80.9!4f-5.439999999999998!5f0.7820865974627469" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <WhatsAppButton />
  <CartButton />
</Layout>

<script>
  const form = document.getElementById('contact-form');
  const successMessage = document.getElementById('success-message');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form as HTMLFormElement);
    const data = Object.fromEntries(formData);
    
    console.log('Datos del formulario:', data);
    
    successMessage?.classList.remove('hidden');
    (form as HTMLFormElement).reset();
    
    setTimeout(() => {
      successMessage?.classList.add('hidden');
    }, 5000);
  });
</script>

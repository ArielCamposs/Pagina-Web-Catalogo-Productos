<!-- Header con Glassmorphism -->
<header class="glass-header sticky top-0 z-50 backdrop-blur-xl bg-white/70 shadow-lg border-b border-white/20">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <div class="text-3xl font-black">
        <a href="/" class="bg-gradient-to-r from-blue-600 via-blue-700 to-slate-700 bg-clip-text text-transparent hover:scale-105 transition-transform duration-300 inline-block">
          MUSAPLAST
        </a>
      </div>
      
      <!-- Menú Desktop -->
      <ul class="hidden md:flex space-x-8">
        {navItems.map(item => (
          <li class="relative dropdown-container">
            <a 
              href={item.href} 
              class="font-semibold text-gray-700 hover:text-blue-600 transition-colors duration-300 relative after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-blue-600 hover:after:w-full after:transition-all after:duration-300"
            >
              {item.name}
            </a>
            {item.dropdown && (
              <ul class="dropdown-menu glass-dropdown backdrop-blur-xl bg-white/90 shadow-2xl rounded-2xl mt-4 py-3 w-56 border border-white/20">
                {item.dropdown.map(sub => (
                  <li>
                    <a 
                      href={sub.href} 
                      class="block px-5 py-3 hover:bg-blue-50 hover:text-blue-600 transition-all duration-300 rounded-xl mx-2"
                    >
                      {sub.name}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))}
      </ul>

      <!-- Botón Hamburguesa -->
      <button id="mobile-menu-button" class="md:hidden text-gray-700 hover:text-blue-600 transition-colors">
        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    <!-- Menú Mobile -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
      <ul class="space-y-2">
        {navItems.map(item => (
          <li>
            <a 
              href={item.href} 
              class="block py-3 px-4 rounded-xl hover:bg-blue-50 hover:text-blue-600 transition-all duration-300 font-semibold"
            >
              {item.name}
            </a>
            {item.dropdown && (
              <ul class="ml-4 mt-2 space-y-2">
                {item.dropdown.map(sub => (
                  <li>
                    <a 
                      href={sub.href} 
                      class="block py-2 px-4 text-sm rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-all duration-300"
                    >
                      {sub.name}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<style>
  .glass-header {
    backdrop-filter: blur(16px) saturate(180%);
  }
  
  .glass-dropdown {
    backdrop-filter: blur(20px) saturate(180%);
  }

  .dropdown-container {
    position: relative;
  }

  .dropdown-menu {
    position: absolute;
    top: calc(100% + 8px);
    left: 0;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.2s ease;
    pointer-events: none;
    z-index: 50;
  }

  .dropdown-menu.show {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    pointer-events: auto;
  }
</style>

<script>
  // Menu mobile
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Dropdown mejorado con JavaScript
  const dropdownContainers = document.querySelectorAll('.dropdown-container');
  
  dropdownContainers.forEach(container => {
    const dropdown = container.querySelector('.dropdown-menu');
    let timeoutId: number;

    // Mostrar dropdown
    const showDropdown = () => {
      clearTimeout(timeoutId);
      dropdown?.classList.add('show');
    };

    // Ocultar dropdown con delay
    const hideDropdown = () => {
      timeoutId = setTimeout(() => {
        dropdown?.classList.remove('show');
      }, 200); // 200ms de delay antes de cerrar
    };

    // Event listeners en el contenedor
    container.addEventListener('mouseenter', showDropdown);
    container.addEventListener('mouseleave', hideDropdown);

    // Event listeners en el dropdown
    dropdown?.addEventListener('mouseenter', () => {
      clearTimeout(timeoutId);
      dropdown.classList.add('show');
    });
    dropdown?.addEventListener('mouseleave', hideDropdown);
  });
</script>


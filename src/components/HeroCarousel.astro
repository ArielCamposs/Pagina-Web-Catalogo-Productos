---
const slides = [
  {
    image: '/images/hero1.jpg',
    title: 'Productos Plásticos de Calidad',
    subtitle: 'Premium',
    description: 'Vasos, contenedores y más para tu negocio'
  },
  {
    image: '/images/hero2.jpg',
    title: 'Artículos de Aseo Profesionales',
    subtitle: 'Profesional',
    description: 'Cloro, detergentes y productos de limpieza'
  },
  {
    image: '/images/hero3.jpg',
    title: 'Desechables Ecológicos',
    subtitle: 'Sustentable',
    description: 'Potes kraft, bolsas y empaques biodegradables'
  }
];
---

<section class="carousel-container relative h-[85vh] min-h-[600px] max-h-[900px] w-full overflow-hidden bg-slate-900">
  {slides.map((slide, index) => (
    <div 
      class={`carousel-slide absolute inset-0 transition-opacity duration-1000 ${index === 0 ? 'opacity-100' : 'opacity-0'}`}
      data-slide={index}
    >
      <!-- Imagen de fondo -->
      <div class="absolute inset-0">
        <img 
          src={slide.image} 
          alt={slide.title}
          class="w-full h-full object-cover"
        />
        
        <!-- Overlay con gradiente dramático -->
        <div class="absolute inset-0 bg-gradient-to-r from-slate-900/95 via-slate-900/70 to-transparent"></div>
        
        <!-- Elementos decorativos -->
        <div class="absolute top-20 right-20 w-96 h-96 bg-cyan-500/20 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-20 left-20 w-96 h-96 bg-blue-600/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
      </div>
      
      <!-- Contenido -->
      <div class="relative h-full flex items-center z-10">
        <div class="container mx-auto px-6">
          <div class="max-w-3xl animate-fade-in-up">
            <!-- Badge superior -->
            <div class="inline-flex items-center bg-cyan-500/20 backdrop-blur-sm border border-cyan-400/30 rounded-full px-5 py-2 mb-6 animate-scale-in">
              <span class="w-2 h-2 bg-cyan-400 rounded-full mr-3 animate-pulse"></span>
              <span class="text-cyan-100 text-sm font-bold tracking-wide">{slide.subtitle}</span>
            </div>
            
            <!-- Título principal -->
            <h1 class="text-6xl md:text-7xl lg:text-8xl font-black mb-6 leading-[1.1] tracking-tight">
              <span class="text-white drop-shadow-2xl">{slide.title}</span>
            </h1>
            
            <!-- Descripción -->
            <p class="text-xl md:text-2xl text-gray-200 mb-10 leading-relaxed font-medium">
              {slide.description}
            </p>
            
            <!-- CTAs -->
            <div class="flex flex-wrap gap-4">
              <a 
                href="/productos" 
                class="group relative px-8 py-4 bg-gradient-to-r from-cyan-500 via-blue-600 to-blue-700 rounded-xl font-bold text-white overflow-hidden transition-all hover:scale-105 hover:shadow-2xl hover:shadow-blue-500/50 inline-flex items-center"
              >
                <span class="relative z-10 flex items-center">
                  Ver Catálogo Completo
                  <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </span>
                <!-- Efecto de brillo -->
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -skew-x-12 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></div>
              </a>
              
              <a 
                href="/contacto" 
                class="px-8 py-4 bg-white/10 backdrop-blur-sm border-2 border-white/30 rounded-xl font-bold text-white hover:bg-white/20 hover:border-white/50 transition-all inline-flex items-center group"
              >
                Contactar Ahora
                <svg class="w-5 h-5 ml-2 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Gradiente inferior para transición suave -->
      <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-white to-transparent z-20"></div>
    </div>
  ))}

  <!-- Flechas de navegación mejoradas -->
  <button 
    id="prev-btn" 
    class="absolute left-6 top-1/2 -translate-y-1/2 z-30 bg-white/20 hover:bg-white/30 backdrop-blur-md text-white p-4 rounded-full transition-all hover:scale-110 border border-white/20"
    aria-label="Slide anterior"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
  </button>
  
  <button 
    id="next-btn" 
    class="absolute right-6 top-1/2 -translate-y-1/2 z-30 bg-white/20 hover:bg-white/30 backdrop-blur-md text-white p-4 rounded-full transition-all hover:scale-110 border border-white/20"
    aria-label="Siguiente slide"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
  </button>

  <!-- Indicadores mejorados -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex space-x-3 z-30">
    {slides.map((_, index) => (
      <button 
        class={`carousel-dot h-2 rounded-full transition-all ${index === 0 ? 'bg-white w-12' : 'bg-white/50 w-2 hover:bg-white/70'}`}
        data-slide={index}
        aria-label={`Ir a slide ${index + 1}`}
      ></button>
    ))}
  </div>
</section>

<script>
  const slides = document.querySelectorAll('.carousel-slide');
  const dots = document.querySelectorAll('.carousel-dot');
  const prevBtn = document.getElementById('prev-btn');
  const nextBtn = document.getElementById('next-btn');
  const container = document.querySelector('.carousel-container');
  
  let currentSlide = 0;
  let autoplayInterval: number;

  function showSlide(index: number) {
    // Ocultar todos
    slides.forEach(slide => {
      slide.classList.remove('opacity-100');
      slide.classList.add('opacity-0');
    });

    dots.forEach(dot => {
      dot.classList.remove('bg-white', 'w-12');
      dot.classList.add('bg-white/50', 'w-2');
    });

    // Mostrar actual
    slides[index].classList.remove('opacity-0');
    slides[index].classList.add('opacity-100');
    
    dots[index].classList.remove('bg-white/50', 'w-2');
    dots[index].classList.add('bg-white', 'w-12');

    currentSlide = index;
  }

  function nextSlide() {
    const next = (currentSlide + 1) % slides.length;
    showSlide(next);
  }

  function prevSlide() {
    const prev = (currentSlide - 1 + slides.length) % slides.length;
    showSlide(prev);
  }

  function startAutoplay() {
    autoplayInterval = setInterval(nextSlide, 5000);
  }

  function stopAutoplay() {
    clearInterval(autoplayInterval);
  }

  // Eventos
  prevBtn?.addEventListener('click', () => {
    prevSlide();
    stopAutoplay();
    startAutoplay();
  });

  nextBtn?.addEventListener('click', () => {
    nextSlide();
    stopAutoplay();
    startAutoplay();
  });

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      showSlide(index);
      stopAutoplay();
      startAutoplay();
    });
  });

  container?.addEventListener('mouseenter', stopAutoplay);
  container?.addEventListener('mouseleave', startAutoplay);

  // Iniciar
  startAutoplay();
</script>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
</style>
---
interface Props {
  name: string;
  category: string;
  image: string;
  description?: string;
}

const { name, category, image, description } = Astro.props;
---

<div class="product-card group" data-product-card>
  <div class="product-card-inner">
    <!-- Imagen -->
    <div class="relative h-48 sm:h-56 md:h-64 lg:h-72 overflow-hidden rounded-t-3xl bg-gray-50">
      <div class="absolute inset-0 bg-gradient-to-br from-blue-500/10 to-slate-500/10 z-10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
      <img 
        src={image} 
        alt={name} 
        class="w-full h-full object-contain p-4 group-hover:scale-110 transition-transform duration-700"
      />
      <!-- Badge Categoría -->
      <div class="absolute top-3 left-3 z-20">
        <span class="glass-badge backdrop-blur-xl bg-white/90 text-blue-700 font-bold px-3 py-1.5 rounded-full text-xs sm:text-sm border border-blue-100 shadow-lg">
          {category}
        </span>
      </div>
    </div>
    
    <!-- Contenido -->
    <div class="p-2 sm:p-3 md:p-6 bg-gradient-to-br from-white to-gray-50">
      <h3 class="text-lg sm:text-xl md:text-2xl font-bold mb-2 bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent line-clamp-2">
        {name}
      </h3>
      {description && (
        <p class="text-gray-600 text-xs sm:text-sm mb-3 sm:mb-4 line-clamp-2">{description}</p>
      )}
      
      <!-- Fila con selector de cantidad y botón -->
      <div class="flex items-center gap-2 sm:gap-3">
        <!-- Selector de Cantidad (compacto) -->
        <div class="quantity-selector-compact">
          <button class="qty-btn decrease" type="button" aria-label="Disminuir cantidad">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M20 12H4"/>
            </svg>
          </button>
          <input 
            type="number" 
            class="qty-input" 
            value="1" 
            min="1" 
            max="999"
            readonly
            aria-label="Cantidad"
          />
          <button class="qty-btn increase" type="button" aria-label="Aumentar cantidad">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M12 4v16m8-8H4"/>
            </svg>
          </button>
        </div>
        
        <!-- Botón Agregar al Carrito -->
        <button 
          class="add-to-cart-btn flex-1 py-2.5 sm:py-3 rounded-xl font-bold transition-all duration-300 text-sm sm:text-base"
          data-product-name={name}
          data-product-category={category}
          data-product-image={image}
          data-product-description={description}
        >
          <span class="flex items-center justify-center">
            <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-1.5 sm:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
            </svg>
            <span class="hidden sm:inline">Agregar</span>
            <span class="sm:hidden">+</span>
          </span>
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  // Manejar los botones de cantidad en cada card
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('[data-product-card]');
    
    cards.forEach(card => {
      const decreaseBtn = card.querySelector('.decrease');
      const increaseBtn = card.querySelector('.increase');
      const input = card.querySelector('.qty-input') as HTMLInputElement;
      
      if (!decreaseBtn || !increaseBtn || !input) return;
      
      decreaseBtn.addEventListener('click', () => {
        const currentValue = parseInt(input.value);
        if (currentValue > 1) {
          input.value = (currentValue - 1).toString();
        }
      });
      
      increaseBtn.addEventListener('click', () => {
        const currentValue = parseInt(input.value);
        if (currentValue < 999) {
          input.value = (currentValue + 1).toString();
        }
      });
      
      // Prevenir entrada manual
      input.addEventListener('keydown', (e) => {
        e.preventDefault();
      });
    });
  });
</script>

<style>
  .product-card {
    perspective: 1000px;
    height: 100%;
    display: flex;
  }
  
  .product-card-inner {
    background: white;
    border-radius: 1.5rem;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    transition: all 0.5s cubic-bezier(0.23, 1, 0.320, 1);
    border: 1px solid rgba(255, 255, 255, 0.5);
    height: 100%;
    display: flex;
    flex-direction: column;
    width: 100%;
  }
  
  .product-card:hover .product-card-inner {
    transform: translateY(-10px);
    box-shadow: 0 20px 60px rgba(37, 99, 235, 0.2);
  }
  
  .glass-badge {
    backdrop-filter: blur(12px) saturate(180%);
    animation: fadeInScale 0.5s ease-out;
  }
  
  /* Selector de cantidad compacto */
  .quantity-selector-compact {
    display: flex;
    align-items: center;
    background: white;
    border-radius: 0.5rem;
    border: 2px solid #e5e7eb;
    overflow: hidden;
    flex-shrink: 0;
  }
  
  .qty-btn {
    width: 28px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f9fafb;
    color: #6b7280;
    transition: all 0.2s ease;
    border: none;
  }
  
  .qty-btn:hover {
    background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
    color: white;
  }
  
  .qty-btn:active {
    transform: scale(0.9);
  }
  
  .qty-input {
    width: 40px;
    text-align: center;
    font-weight: 600;
    font-size: 0.875rem;
    color: #374151;
    background: white;
    border: none;
    outline: none;
    cursor: default;
    padding: 0.25rem;
  }
  
  /* Ocultar flechas de input number */
  .qty-input::-webkit-outer-spin-button,
  .qty-input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
  
  .qty-input[type=number] {
    -moz-appearance: textfield;
  }
  
  .add-to-cart-btn {
    background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
    color: white;
    position: relative;
    overflow: hidden;
    border: none;
  }
  
  .add-to-cart-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #1e40af 0%, #1e3a8a 100%);
    transition: left 0.5s ease;
  }
  
  .add-to-cart-btn:hover::before {
    left: 0;
  }
  
  .add-to-cart-btn span {
    position: relative;
    z-index: 1;
  }
  
  .add-to-cart-btn.added {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  }
  
  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Responsive */
  @media (max-width: 640px) {
    .qty-btn {
      width: 24px;
      height: 32px;
    }
    
    .qty-input {
      width: 32px;
      font-size: 0.75rem;
    }
  }
</style>

